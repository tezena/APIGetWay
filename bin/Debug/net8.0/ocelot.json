{
  {
    "Routes": [
      //Product web Api 
      {
        "UpstreamPathTemplate": "/api/Product/products/{userId}",
        "UpstreamHttpMethod": [ "Get" ],
        "DownStreamScheme": "http",
        "DownStreamHostAndPort": [
          {
            "Host": "productsWepApi",
            "Port": 8080
          }
        ],

        "DownStreamPathTemplate": "/api/Product/products"
      },
      {
        "UpstreamPathTemplate": "/api/Product/{id}",
        "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
        "DownStreamScheme": "http",
        "DownStreamHostAndPort": [
          {
            "Host": "productsWepApi",
            "Port": 8080
          }
        ],
        "DownStreamPathTemplate": "/api/Product/products/{id}"

      },

      //Account web api
      {
        "UpstreamPathTemplate": "/api/Accounts/Login",
        "UpstreamHttpMethod": [ "Post" ],
        "DownStreamScheme": "http",
        "DownStreamHostAndPort": [
          {
            "Host": "AccountsWebApi",
            "Port": 8080
          }
        ],
        "DownStreamPathTemplate": "/api/Accounts/Login"

      },
      {
        "UpstreamPathTemplate": "/api/Accounts/Register",
        "UpstreamHttpMethod": [ "Post" ],
        "DownStreamScheme": "http",
        "DownStreamHostAndPort": [
          {
            "Host": "AccountsWebApi",
            "Port": 8080
          }
        ],
        "DownStreamPathTemplate": "/api/Accounts/Register"
      }
    ],
    "GlobalConfiguretion": {
      "BaseUrl": "http://localhost:8000"
    }

  }
}

